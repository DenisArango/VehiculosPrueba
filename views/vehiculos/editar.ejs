<%- include ../layouts/header.ejs %> 
<br>
<br>
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos del vehiculo</h5>
        <p class="card-text">
            <form method="post" action="../actualizar/" enctype="multipart/form-data">
            <input type="text" readonly name="id" value="<%=vehiculo.placa%>">
            <div class="form-group">
                <label for="my-input">Modelo</label>
                <input id="my-input" value="<%=vehiculo.modelo%>" class="form-control" type="text" name="modelo">
            </div>
            <div class="form-group">
                <label for="my-input">Año</label>
                <input id="my-input" value="<%=vehiculo.año%>" class="form-control" type="text" name="año">
            </div>
            <div class="form-group">
                <label for="my-input">Marca</label>
                <input id="my-input" value="<%=vehiculo.marca%>" class="form-control" type="text" name="marca">
            </div>
            <div class="form-group">
                <label for="my-input">Estado</label>
                <br>
                <select name="estado">
                    <option value="Perfecto">Perfecto</option> 
                    <option value="Daño Menor">Daño Menor</option> 
                    <option value="Reparacion urgente">Reparacion urgente</option> 
                    <option value="En reparacion">En reparacion</option> 
                    <option value="Descarte">Descarte</option> 
                 </select>

            </div>
            <div class="form-group">
                <label for="my-input">Imagen</label>
                <img class="img-thumbnail" src="../../images/<%=vehiculo.imagen%>" width="100" alt="">
                <input id="my-input" class="form-control-file" type="file" name="archivo">
            </div>
            <button class="btn btn-success" type="submit">Actualizar</button>
            <a class="btn btn-primary" href="/vehiculos">Cancelar</a>
        </form></p>
    </div>
</div>

<%- include ../layouts/footer.ejs %> 